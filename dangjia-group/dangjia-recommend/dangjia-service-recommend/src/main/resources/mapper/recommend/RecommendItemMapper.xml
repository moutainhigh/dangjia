<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dangjia.acg.mapper.recommend.IRecommendItemMapper">

    <select id="queryList" resultType="com.dangjia.acg.modle.recommend.RecommendItem">

        SELECT
            id
            , item_name 'itemName'
        FROM
            dj_recommend_item
        <where>
            <if test="null != itemName and ''!=itemName">
            AND item_name LIKE CONCAT('%',#{itemName},'%')
            </if>
            AND data_status = 0
        </where>

    </select>

</mapper>