<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dangjia.acg.mapper.recommend.HouseMapper">

    <!-- 查询房子列表 - 根据小区名 -->
    <select id="queryHouseListByResidential" resultType="com.dangjia.acg.modle.house.House">
        SELECT
        id
        , residential
        , building
        , unit
        , `number`
        , image
        , visit_state 'visitState'
        FROM
        dj_house
        WHERE
        data_status = 0
        <if test="residential != null and residential != ''">
            AND residential LIKE CONCAT('%',#{residential},'%')
        </if>
    </select>

</mapper>

